@using Task_Management_System.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/projects_index.css">
</head>
<body>
    <header>
    <nav>
        <div class="logo">
            <a class="logo-text">Zhest</a>
        </div>
        @if (ViewBag.CurrUser != null && ViewBag.CurrUser.Role.ToString() == "Admin")
        {
            <div class="nav-links">
                <a class="nav-link-element" href="@Url.Action("Create", "Projects")">Create</a>
            </div>
        }
    </nav>
    </header>
    <main>
    <div class="container">
            <h1>Tarifs</h1>

            @if (ViewBag.Message != null)
            {
                <div role="alert">
                    @ViewBag.Message
                </div>
            }

                <div class="project-list">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <h2 class="card-title">@item.Title</h2>
                        <p class="card-description">@item.Description</p>
                        <a class="card-button" href="@Url.Action("Details", "Projects", new { id = item.Id })">View Details</a>
                        <a class="card-button" href="@Url.Action("Edit", "Projects", new { id = item.Id, userId = @User.Identity.Name })">Connect</a>
                    </div>
                }
            </div>
        </div>
    </main>
</body>
</html>
