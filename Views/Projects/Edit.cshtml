@model Task_Management_System.Models.Project

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Update</title>
    <link rel="stylesheet" href="~/css/projects_edit.css">
</head>
<body>
    <div class="container">
        <h1>Edit</h1>
        @if (ViewBag.Message != null)
        {
            <div role="alert">
                @ViewBag.Message
            </div>
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div>
                        <p>Title</p>
                        @Html.EditorFor(model => model.Title)
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <p>Description</p>
                        @Html.EditorFor(model => model.Description)
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" value="Update" />
                    </div>
                </div>

            </div>
        }
        <div class="actions">
            <a href="@Url.Action("Index", "Projects")" class="btn-back">Back to List</a>
        </div>
    </div>
</body>
</html>
