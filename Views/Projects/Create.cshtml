@model Task_Management_System.Models.Project
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Create</title>
    <link rel="stylesheet" href="~/css/projects_create.css">
</head>
<body>

    @if (ViewBag.Message != null)
    {
        <div role="alert">
            @ViewBag.Message
        </div>
    }

    @using (Html.BeginForm("Create", "Projects", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <h1>Create New Project</h1>
            <hr/>

            @Html.ValidationSummary(true)

            <div class="form-group">
                <label for="Title">Title</label>
                @Html.EditorFor(model => model.Title)
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                @Html.EditorFor(model => model.Description)
            </div>

            <div class="form-group">
                <input type="submit" value="Create" />
            </div>

            <div class="actions">
                <a href="@Url.Action("Index", "Projects")" class="btn-back">Back to List</a>
            </div>
        </div>
    }
</body>
</html>
