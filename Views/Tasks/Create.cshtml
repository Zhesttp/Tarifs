<!DOCTYPE html>
<html>
<head>
    <title>Create</title>
    <link rel="stylesheet" href="~/css/tasks_create.css">
</head>
<body>
    @model Task_Management_System.Models.Task
    @{
        ViewBag.Title = "Create";
    }

    <div class="container">
        <h1>Create Task</h1>

        @if (ViewBag.Message != null)
        {
            <div role="alert">
                @ViewBag.Message
            </div>
        }

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div>
                <div>Task</div>
                <hr />
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label>Progress</label>
                    @Html.DropDownListFor(model => model.Progress,
                        new List<SelectListItem>(){
                            new SelectListItem("Backlog", "0"),
                            new SelectListItem("ToDo", "1"),
                            new SelectListItem("In Progress", "2"),
                            new SelectListItem("Waiting For Answer", "3"),
                            new SelectListItem("Blocked", "4"),
                            new SelectListItem("Code Review", "5"),
                            new SelectListItem("Closed", "6")
                        }
                    )
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input name="email" placeholder="Your email goes here" />
                </div>

                <div class="form-group">
                    <label>Title</label>
                    @Html.EditorFor(model => model.Title)
                </div>

                <div class="form-group">
                    <label>Description</label>
                    @Html.EditorFor(model => model.Description)
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" />
                </div>
            </div>
        }

       <div class="actions">
            <a href="@Url.Action("Index", "Projects")" class="btn-back">Back to List</a>
        </div>
    </div>
</body>
</html>
